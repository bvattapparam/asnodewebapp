{?data.notificationCollection.notifications.alerts}
<div class="notificationWrapper">
	<a data-toggle="modal" role="button" aria-owns="Notifications" class="button secondary small" id="notificationBttn" href="#">
		<span class="notification-icon"></span>
		<span class="notificationCount">{data.notificationCollection.notifications.alerts.length}</span>
		<span class="accessAid">{@pre type="content" key="notification.header"/}</span>
	</a>
	<div tabindex="-1" aria-labelledby="{@pre type="content" key="notification.header" editable="false" /}" role="dialog" class="popover notificationsBox show-onload" id="notificationsBox">
		<div class="popover-content">
			<div class="popover-head">
				<h2>{@pre type="content" key="notification.header"/}</h2>
				<a tabindex="-1" role="button" class="closeNotifications" href="#"><span class="accessAid">{@pre type="content" key="notification.closeAlt"/}</span></a>
			</div>
			<div class="popover-body">
				<ul class="notificationLinks">
					{#data.notificationCollection.notifications.alerts}
						<li class="alertItem
							{@if test="'{category}' == '0' && '{alertType}' == '0'"} alert-restriction {/if}
							{@if test="'{category}' == '0' && '{alertType}' == '1'"} alert-warning {/if}
						">
							{?commandUrl}
								<a href="{commandUrl}" class="alertDesc">{message|s}</a>
							{:else}
								{message|s}
							{/commandUrl}
							{?dismissable}
								<a data-dismiss="alert" id="{alertId}|{alertName}" class="dismiss close-individual" href="#">
									<span class="accessAid">{@pre type="content" key="notification.dismissAlt"/}</span>
								</a>
							{/dismissable}
						</li>
					{/data.notificationCollection.notifications.alerts}
				</ul>
			</div>
		</div>
	</div>
</div>
{/data.notificationCollection.notifications.alerts}

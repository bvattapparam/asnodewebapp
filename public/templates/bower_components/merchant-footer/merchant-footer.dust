{!
	@param showMainNav		Boolean indicating whether to show or hide utility nav
	@param showFeedback		Boolean indicating whether to show or hide feedback link
	@param showLegalNav		Boolean indicating whether to show or hide legal nav
!}

<footer role="navigation" class="merchantFooter">
	{@if cond="'{showMainNav}' == 'true'"}
		<div class="utility">
			<div class="footerNav">
				<nav>
					<ul class="navlinks">
						{@provide}
							{#optionList}
								<li>{$elt|s}</li>
							{/optionList}

							{:optionList}
							{@pre type="content" key="merchant-footer.navLinks" mode="paired"/}
						{/provide}
					</ul>
					{@if test="'{showFeedback}' == 'true'"}
						<ul class="feedback">
							<div id="accNumber" data-accNumber="{data.user.encryptedAccountNumber}"></div>
							<div id="country" data-country="{context.locality.country}"></div>
							<div id="locale" data-locale="{context.locality.locale}"></div>
							<li><a href="#" target="_blank" class="feedbackPopup scTrack:footer_feedback">{@pre type="content" key="merchant-footer.feedback"/}</a></li>
						</ul>
					{/if}
				</nav>
			</div>
		</div>
	{/if}
	<div class="footer">
		<div class="footerNav">
			<div class="legal">
				<p class="copyright">{@pre type="content" key="merchant-footer.copyright"/}</p>
				{@if cond="'{showLegalNav}' == 'true'"}
					<ul>
						{@provide}
							{#optionList}
								<li>{$elt|s}</li>
							{/optionList}

							{:optionList}
							{@pre type="content" key="merchant-footer.legalNavLinks" mode="paired"/}
						{/provide}
						{@if test="'{viewName}' == 'summary/index'"}
							<li>{@pre type="content" key="merchant-footer.policyUpdates"/}</li>
						{/if}
					</ul>
				{/if}
				{@if test="'{context.locality.country}' != 'US' && '{context.locality.country}' != 'CA'"}
					<p class="legalDisc">{@pre type="content" key="merchant-footer.legalDisclaimer"/}</p>
				{/if}
			</div>
		</div>
	</div>
</footer>

